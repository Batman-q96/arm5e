<div class="template-item-box flex01 flexrow" style="">
  <div id="template-content">
    <label class="template-item-label">Characteristic</label>
    <select
      name="system.magicSystem.templates.{{this.id}}.components.{{this.compIdx}}.characteristic"
    >
      {{selectOptions this.selection selected=this.characteristic}}
    </select>
    <div id="top-right-icon">
      <a
        class="template-item"
        data-action="delete"
        data-id="{{id}}"
        data-index="{{compIdx}}"
        title="Delete template"
      ><i class="icon-SmallIcon_Delete_Hand_Gesture"></i></a>
    </div>
  </div>
</div>