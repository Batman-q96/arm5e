<div class="template-item-box flexrow flex01">
  <div id="template-content">
    <label class="template-item-label">{{localize "arm5e.sheet.ability"}}</label>
    <select
      data-type="String"
      class="item-ability-key"
      style="max-width: 140px;"
      data-id="{{id}}"
      data-index="{{compIdx}}"
    >
      {{selectOptions
        this.selection
        selected=this.ability._id
        labelAttr="name"
        valueAttr="id"
        nameAttr="id"
      }}
    </select>
    <div id="top-right-icon">
      <a
        class="template-item"
        data-action="delete"
        data-id="{{id}}"
        data-index="{{compIdx}}"
        title="Delete template"
      ><i class="icon-SmallIcon_Delete_Hand_Gesture"></i></a>
    </div>
  </div>
</div>